
<div></div>
<div class="row">
  <div class="col">
    <h1>Add a new restaurant</h1>
  </div>
</div>
<div class="row">
  <div class="col-6">
    <%= simple_form_for(@restaurant) do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :category, collection: Restaurant::CATEGORY %>

      <%= f.submit "Add the resto", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
